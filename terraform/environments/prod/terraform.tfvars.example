# EmailAI Production Environment Variables
# Copy this file to terraform.tfvars and fill in your values

# Project Configuration
project_name = "calldata"
environment  = "emailai-prod"

# Network Configuration
vpc_cidr             = "10.2.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.2.1.0/24", "10.2.2.0/24"]
private_subnet_cidrs = ["10.2.11.0/24", "10.2.12.0/24"]

# EC2 Configuration
instance_count   = 2
instance_type    = "t3.medium"  # 2 vCPU, 4 GB RAM
root_volume_size = 30

# Database Configuration
db_name               = "emailai_prod"
db_username           = "emailai_admin"
db_password           = "CHANGE_ME_STRONG_PASSWORD"  # Generate with: openssl rand -base64 32
db_instance_class     = "db.t3.micro"               # For production, consider db.t3.small or larger
db_allocated_storage  = 20
db_engine_version     = "15.4"
db_multi_az           = false  # Set to true for production HA
db_backup_retention_days = 7

# ALB Configuration
certificate_arn           = ""  # Add ACM certificate ARN for HTTPS (e.g., arn:aws:acm:us-east-1:...)
enable_deletion_protection = false  # Set to true for production protection
