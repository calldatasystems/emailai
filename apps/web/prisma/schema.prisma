enum ExecutedRuleStatus {
  APPLIED
  APPLYING
  REJECTED
  PENDING
  SKIPPED
  ERROR
}

enum GroupItemType {
  FROM
  SUBJECT
  BODY
}

enum CategoryFilterType {
  INCLUDE
  EXCLUDE
}

enum LogicalOperator {
  AND
  OR
}

enum ThreadTrackerType {
  AWAITING // We're waiting for their reply
  NEEDS_REPLY // We need to reply to this
